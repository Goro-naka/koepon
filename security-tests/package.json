{
  "name": "koepon-security-tests",
  "version": "1.0.0",
  "description": "Security test suite for Koepon! application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:security": "jest --config=jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "zap:scan": "docker-compose -f docker-compose.zap.yml up --build --abort-on-container-exit",
    "zap:report": "node scripts/generate-zap-report.js",
    "security:full": "npm run test:security && npm run zap:scan && npm run zap:report",
    "lint": "eslint tests/ setup/ utils/",
    "lint:fix": "eslint tests/ setup/ utils/ --fix"
  },
  "keywords": [
    "security",
    "testing",
    "owasp",
    "zap",
    "penetration-testing",
    "vulnerability-scanning"
  ],
  "author": "Koepon Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}
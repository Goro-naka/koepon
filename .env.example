# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=koepon
DATABASE_URL=postgresql://postgres:password@localhost:5432/koepon

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=3600
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-change-in-production
REFRESH_TOKEN_EXPIRATION=2592000

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
KOMOJU_SECRET_KEY=your-komoju-secret-key
KOMOJU_WEBHOOK_SECRET=your-komoju-webhook-secret

# File Storage Configuration
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=koepon-files
CLOUDFRONT_DOMAIN=your-cloudfront-domain

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=ZIP,MP3,PNG,JPEG,WEBP,MP4

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring (Optional)
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=
SENTRY_DSN=